<div class="row">
  <%= render 'shared/error_messages', object: @team %>
  <%= form_for @team do |f| %>
      <div class="form-group">
        <%= f.label :name  %>
        <%= f.text_field :name, class: 'form-control', placeholder: 'Name' %>
      </div>
      <div class="form-group">
        <%= f.label :description  %>
        <%= f.text_area :description, class: 'form-control', placeholder: 'Description' %>
      </div>
      <%= f.submit "Edit" %>
  <% end %>
</div>