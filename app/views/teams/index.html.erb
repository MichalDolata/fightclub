<div class="row">
  <%= link_to new_team_path do %>
    <button type="button" class="btn btn-primary">Create team</button>
  <% end %>
</div>
<div class="row">
  <table class="table table-striped">
    <thead>
      <tr>
        <th>#</th> <th>Name</th> <th>Edit</th> <th>Delete</th>
      </tr>
    </thead>
    <tbody>
      <% @teams.each do |team| %>
      <tr>
        <td><%= team.id %></td>
        <td><%= team.name %></td>
        <td>
          <%= link_to edit_team_path(team) do %>
              <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
          <% end %>
        </td>
        <td>
          <%= link_to team, method: :delete, data: { confirm: 'Are you sure?' } do %>
              <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
          <% end %>
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>